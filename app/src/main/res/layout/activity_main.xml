<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ricca.bb8_mindwave.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attention: "
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="70dp"
            android:layout_above="@+id/attentionProgressBar"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signal Quality: "
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtSignalQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView"
            android:text="--" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:text="State: " />

        <TextView
            android:id="@+id/txtState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:text="--" />

        <TextView
            android:id="@+id/txtAttention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtState"
            android:layout_marginStart="17dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/txtState"
            android:text="--" />

        <ProgressBar
            android:id="@+id/attentionProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtAttention"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/txtSignalQuality" />

        <TextView
            android:id="@+id/daStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/attentionProgressBar"
            android:layout_marginTop="47dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/robotStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/daStatus"
            android:layout_marginTop="15dp"
            android:text="TextView" />

        <Button
            android:id="@+id/btnRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ledColorRed"
            android:text="RED"
            android:layout_below="@+id/robotStatus"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp" />

        <Button
            android:id="@+id/btnGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnRed"
            android:onClick="ledColorGreen"
            android:text="GREEN" />

        <Button
            android:id="@+id/btnBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnGreen"
            android:onClick="ledColorBlue"
            android:text="Button" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Start reading your mind"
            android:onClick="mindwaveStartListener"/>

        <Button
            android:id="@+id/btnMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnStart"
            android:text="move"
            />

        <com.orbotix.calibration.api.CalibrationImageButtonView
            android:id="@+id/calibrateButton"
            android:visibility="visible"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            app:widget_orientation="above"
            app:foreground_color="#FFFFFFFF"
            app:background_color="#FF1990FF"
            app:calibration_circle_radius="50dp"
            app:calibration_center_x = "30dp"
            app:calibration_center_y = "-30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />


        <!-- This needs to be the last element in your xml page if you want two finger calibration to work
         anywhere in your application's page -->
        <!-- TODO: Decommentare per aggiungere la calibrationView!-->
        <com.orbotix.calibration.api.CalibrationView
            android:id="@+id/calibrationView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:twoFingerEnabled="true"
            />

        <!-- In this case, we want fragments to display over the calibration view -->

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
